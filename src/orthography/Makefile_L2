.PHONY: all

#    L2_ski.compose.hfst L2_ski.lookup.hfst
all: L2_Akn.compose.hfst L2_Akn.lookup.hfst \
     L2_e2je.compose.hfst L2_e2je.lookup.hfst \
     L2_H2S.compose.hfst L2_H2S.lookup.hfst \
     L2_i2j.compose.hfst L2_i2j.lookup.hfst \
     L2_i2y.compose.hfst L2_i2y.lookup.hfst \
     L2_Ikn.compose.hfst L2_Ikn.lookup.hfst \
     L2_j2i.compose.hfst L2_j2i.lookup.hfst \
     L2_je2e.compose.hfst L2_je2e.lookup.hfst \
     L2_NoSS.compose.hfst L2_NoSS.lookup.hfst \
     L2_sh2shch.compose.hfst L2_sh2shch.lookup.hfst \
     L2_shch2sh.compose.hfst L2_shch2sh.lookup.hfst \
     L2_y2i.compose.hfst L2_y2i.lookup.hfst \
     L2_NoGem.hfst

L2_%.compose.hfst: L2_%.regex
	hfst-regexp2fst  --format=foma \
		-v -S L2_$*.regex -o L2_$*.compose.hfst

L2_%.lookup.hfst: L2_%.compose.hfst
	cp L2_$*.compose.hfst L2_$*.lookup.hfst

L2_%.hfst: L2_%.twolc
	hfst-twolc --format=foma L2_$*.twolc > L2_$*.hfst
