				@\"$<\" \
			.o. @\"$(top_builddir)/src/orthography/destressOptional.compose.hfst\" \
			;" \
		| $(HFST_REGEXP2FST) $(HFST_FLAGS) -S --xerox-composition=ON \
		| $(HFST_INVERT) \
		| $(HFST_FST2FST) $(HFST_FLAGS) -t \
		> $@

